<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jinuo.mhwang.editinputlimittest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入框限制测试："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_beLimited"
        app:layout_constraintHorizontal_bias="0.238"/>

    <EditText
        android:id="@+id/et_beLimited"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginLeft="24dp"
        android:inputType="numberDecimal"
        android:hint="请输入(0.1-100.0)的数字"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginTop="319dp"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
